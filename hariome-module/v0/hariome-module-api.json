    "host": "http://www.hariome.com/api/astrome/",
    "basePath": "/v0/astrome",
    "schemes": [
        "http"
    ],
    "paths": {
        "/member/profiles": {
            "post": {
                "tags": ["module:hariome.Profile"],
                "summary": "Add a new profile to user",
                "description": "",
                "operationId": "addProfile",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Profile object that needs to be added to the user",
                        "required": false,
                        "schema": {
                            "$ref": "#/definitions/Profile"
                        }
                    }
                ],
                "responses": {
                    "405": {
                        "description": "Invalid input"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            },
            "put": {
                "tags": ["module:hariome.Profile"],
                "summary": "Update an existing profile",
                "description": "",
                "operationId": "updateProfile",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Profile object that needs to be added to the store",
                        "required": false,
                        "schema": {
                            "$ref": "#/definitions/Profile"
                        }
                    }
                ],
                "responses": {
                    "400": {
                        "description": "Invalid ID supplied"
                    },
                    "404": {
                        "description": "Profile not found"
                    },
                    "405": {
                        "description": "Validation exception"
                    }
                }
            },
            "get": {
                "tags": ["module:hariome.Profile"],
                "summary": "Get list of profile for user based on user token",
                "description": "",
                "operationId": "getProfiles",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "memberId",
                        "description": "MemberId whose profiles need to be pulled.",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Profile"
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid ID supplied"
                    },
                    "404": {
                        "description": "Profile not found"
                    },
                    "405": {
                        "description": "Validation exception"
                    }
                }
            }
        },
        "/faq": {
            "get": {
                "tags": ["module:hariome.FAQ"],
                "summary": "Finds all FAQ w.r.t to a particular Muhurtam, Q&A ",
                "description": "Get list of FAQ.",
                "operationId": "listMuhurtams",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "type",
                        "description": "Muhurtam/GoodTimes/QandA",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "query",
                        "name": "tag",
                        "description": "Tag of particular Muhurtam/GoodTimes/QandA",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Faq"
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid status value"
                    }
                }
            }
        },
        "/stotras": {
            "get": {
                "tags": ["module:hariome.Stotras"],
                "summary": "Finds all stotras/hymns serviced in application",
                "description": "Get list of stotras.",
                "operationId": "listMuhurtams",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "page",
                        "description": "Visible Page Num",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "in": "query",
                        "name": "perPage",
                        "description": "Num of items per page",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Stotra"
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid status value"
                    }
                }
            }
        },
        "/panchang": {
            "get": {
                "tags": ["module:hariome.Panchang"],
                "summary": "Display panchang for a particular date",
                "description": "Get a Pachang for a particular date, if no date is given, respond with current date panchang",
                "operationId": "listMuhurtams",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "date",
                        "description": "if date ignored, todays panchang is returned",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "string",
                            "items": {
                                "$ref": "#/definitions/Panchang"
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid status value"
                    }
                }
            }
        },
        "/horoscope": {
            "get": {
                "tags": ["module:hariome.Horoscope"],
                "summary": "Get horoscope  based on input",
                "description": "Get list of muhurtams with price.",
                "operationId": "listMuhurtams",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "period",
                        "description": "values weekly, monthly, yearly",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "query",
                        "name": "sign",
                        "description": "values could be standar signs like aries, sagitarus...",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "string",
                            "items": {
                                "$ref": "#/definitions/Horoscope"
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid status value"
                    }
                }
            }
        }
    },
    "securityDefinitions": {
        "Bearer": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        } 
    },
    "definitions": {
        "Profile": {
            "type": "object",
            "required": [
                "fullname",
                "dob"
            ],
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "createdBy": {
                    "type": "string",
                    "example": "mem:242342394",
                    "description": "Unique member id given by Tenant"
                },
                "fullname": {
                    "type": "string",
                    "example": "doggie"
                },
                "dob": {
                    "type": "string",
                    "example": "2014-03-05T00:00:00.000Z"
                },
                "tob": {
                    "type": "string",
                    "example": "06:04:23AM"
                },
                "location": {
                    "type": "string",
                    "example": "agra"
                },
                "status": {
                    "type": "integer",
                    "description": "Profile status active 1 or inactive 0"
                }
            }
        },
        "Muhurtam": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "title": {
                    "type": "string"
                },
                "imgURL": {
                    "type": "string"
                },
                "price": {
                    "type": "string"
                },
                "inputprofile": {
                    "type": "string",
                    "description": "Certian muhurtams need 2 input profiles"
                }
            }
        },
        "Faq": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "title": {
                    "type": "string"
                },
                "desc": {
                    "type": "string"
                }
            }
        },
        "Stotra": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "title": {
                    "type": "string"
                },
                "desc": {
                    "type": "string"
                }
            }
        },
        "Panchang": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Image url path"
                },
                "name": {
                    "type": "string",
                    "description": "JSON of pachang data in variable format"
                }
            }
        },
        "Horoscope": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Horoscope data for a year/month/week/day requested"
                }
            }
        }
    }
}
