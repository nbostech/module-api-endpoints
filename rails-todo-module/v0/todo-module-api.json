{
    "swagger": "2.0",
    "info": {
        "version": "0.0.0",
        "title": "Generic Todo module"
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json",
        "application/xml"
    ],
    "securityDefinitions":
    {
     "Bearer":{
       "type": "apiKey",
       "name": "Authorization",
       "in": "header"
     }
    },   
    "paths": {
        "/todo/v0/todos": {
            "get": {
                "summary": "List of all public Todos in a tenant or user's todos",
                "tags": ["module:RoR-todo"],
                "security": [
                    {
                      "Bearer": []
                    }
                ],
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "Success",
                         "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/ShowTodo"
                            }
                        }
                    },
                    "400": {
                      "description": "Bad Request",
                      "schema": {
                          "$ref": "#/definitions/BadRequest"
                      }
                    },
                    "401": {
                      "description": "Unauthorized",
                      "schema": { 
                          "$ref": "#/definitions/UnauthorizedRequest"
                      }
                    },
                    "500": {
                      "description": "Internal Server Error",
                      "schema": {
                          "$ref": "#/definitions/ServerError"
                      }
                    }
                }
            },
            "post": {
                "summary": "Create a user's Todo",
                "tags": ["module:RoR-todo"],
                "security": [
                    {
                        "Bearer": [

                        ]
                    }
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Todo need to be add",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/CreateTodo"
                        }
                    }

                ],
                "responses": {
                  "200": {
                      "description": "Success",
                      "schema": {
                            "$ref": "#/definitions/ShowTodo"
                      }
                  },
                  "400": {
                    "description": "Bad Request",
                    "schema": {
                        "$ref": "#/definitions/BadRequest"
                    }
                  },
                  "401": {
                    "description": "Unauthorized",
                    "schema": { 
                        "$ref": "#/definitions/UnauthorizedRequest"
                    }
                  },
                  "500": {
                    "description": "Internal Server Error",
                    "schema": {
                        "$ref": "#/definitions/TodoModelError"
                    }
                  }
              }
            }

        },
        "/todo/v0/todos/{id}": {
           "get": {
              "summary": "Show particular todo details",
              "tags": ["module:RoR-todo"],
              "security": [
                  {
                    "Bearer": [

                    ]
                  }
              ],
              "parameters": [
                {
                  "in": "path",
                  "name": "id",
                  "description": "id of the todo",
                  "required": true,
                  "type": "integer"
                }
              ],
              "responses": {
                  "200": {
                      "description": "Success",
                      "schema": {
                            "$ref": "#/definitions/ShowTodo"
                      }
                  },
                  "400": {
                    "description": "Bad Request",
                    "schema": {
                        "$ref": "#/definitions/BadRequest"
                    }
                  },
                  "401": {
                    "description": "Unauthorized",
                    "schema": { 
                        "$ref": "#/definitions/UnauthorizedRequest"
                    }
                  },
                  "500": {
                    "description": "Internal Server Error",
                    "schema": {
                        "$ref": "#/definitions/ServerError"
                    }
                  }
              }
            },
          "put": {
              "summary": "Update particular todo",
              "tags": ["module:RoR-todo"],
              "security": [
                  {
                    "Bearer": [

                    ]
                  }
              ],
              "parameters": [
                  {
                    "in": "path",
                    "name": "id",
                    "description": "id of the todo",
                    "required": true,
                    "type": "integer"
                  },
                  {
                      "in": "body",
                      "name": "body",
                      "description": "Update Todo Details",
                      "required": true,
                      "schema": {
                            "$ref": "#/definitions/UpdateTodo"
                      }
                  }
              ],
              "responses": {
                  "200": {
                      "description": "Success",
                      "schema": {
                            "$ref": "#/definitions/ShowTodo"
                      }
                  },
                  "400": {
                    "description": "Bad Request",
                    "schema": {
                        "$ref": "#/definitions/BadRequest"
                    }
                  },
                  "401": {
                    "description": "Unauthorized",
                    "schema": { 
                        "$ref": "#/definitions/UnauthorizedRequest"
                    }
                  },
                  "500": {
                    "description": "Internal Server Error",
                    "schema": {
                        "$ref": "#/definitions/TodoModelError"
                    }
                  }
              }
            } 
        }   
    },
    "definitions": {
      "CreateTodo": {
        "type": "object",
          "required": [
                "title",
                "note"
            ],
          "properties": {
             "title": {
                "type": "string",
                "default": "My Todo"
              },
             "note": {
                "type": "string",
                "default": "My Sample Todo"
              },
             "completed": {
                "type": "boolean",
                "default": false
              }
          }

      },
      "ShowTodo": {
          "type": "object",
          "required": [
                "id",
                "title",
                "note",
                "completed",
                "public",
                "user_id",
                "tenant_id",
                "created_at",
                "updated_at"
            ],
          "properties": {
             "id": {
                "type": "integer",
                "default": 1
              },
             "title": {
                "type": "string",
                "default": "My Todo"
              }, 
             "note": {
                "type": "string",
                "default": "My Sample Todo"
              },
             "completed": {
                "type": "boolean",
                "default": false
              },
             "public": {
                "type": "boolean",
                "default": false
              },
             "user_id": {
                "type": "integer",
                "default": 1
              },
             "tenant_id": {
                "type": "string",
                "default": "TNT:TES-c4e7lki8"
              },
             "created_at": {
                "type": "string",
                "default": "2016-09-14T04:16:23.000Z"
             },
             "updated_at": {
                "type": "string",
                "default": "2016-09-14T04:16:23.000Z"
             }
          }

      },
      "UpdateTodo": {
         "type": "object",
         "required": [
            "title",
            "note",
            "completed",
            "public"
         ],
         "properties": {
            "title": {
              "type": "string",
              "default": "My Todo"
            },
            "note": {
              "type": "string",
              "default": "My sample Todo"
            },
            "completed": {
              "type": "boolean",
              "default": true
            },
            "public": {
              "type": "boolean",
              "default": true
            }
         }

      },
      "TodoModelError": {
          "type": "object",
          "required": [
                "errors"
            ],
          "properties": {
            "errors": {
               "type": "array",
               "items": {},
               "default": [
                            {
                              "messageCode": "todo.title",
                              "message": "title empty",
                              "propertyName": "title",
                              "objectName": "Com::Nbos::Modules::Todos::Todo"
                            }
                          ]  
            }
          }  
      },
      "BadRequest": {
          "type": "object",
          "required": [
                "messageCode",
                "message"
            ],
          "properties": {
            "messageCode": {
                "type": "string",
                "default": "Bad.Request"
            },
            "message": {
                "type": "string",
                "default": "Bad Request"
            }
          }

      },
      "UnauthorizedRequest": {
          "type": "object",
          "required": [
                "messageCode",
                "message"
            ],
          "properties": {
            "messageCode": {
                "type": "string",
                "default": "module.unauthorized"
            },
            "message": {
                "type": "string",
                "default": "You are not SubScribed To ToDo Module"
            }
          }

      },
      "ServerError": {
          "type": "object",
          "required": [
                "messageCode",
                "message"
            ],
          "properties": {
            "messageCode": {
                "type": "string",
                "default": "internal.server.error"
            },
            "message": {
                "type": "string",
                "default": "Internal Server Error"
            }
          }

      }

    }
}