                "messageCode",
                "message"
            ],
          "properties": {
            "messageCode": {
                "type": "string",
                "default": "module.unauthorised"
            },
            "message": {
                "type": "string",
                "default": "Unauthorized Access"
            }
          }

        },
        "ServerError": {
          "type": "object",
          "required": [
                "messageCode",
                "message"
            ],
          "properties": {
            "messageCode": {
                "type": "string",
                "default": "internal.server.error"
            },
            "message": {
                "type": "string",
                "default": "Internal Server Error"
            }
          }

        }  
    }
