    "definitions": {
        "Event": {
            "type": "object",
            "required": [
                "name",
                "address",
                "start_date",
                "end_date",
                "start_time",
                "end_time",
                "location"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "example": "Sample Event"
                },
                "description": {
                    "type": "string",
                    "example": "Sample Event"
                },
                "address": {
                    "type": "string",
                    "example": "Hyderabad"
                },
                "location": {
                    "type": "string",
                    "example": "Hitech City"
                },
                "contact_person": {
                    "type": "string",
                    "example": "Jhon"
                },
                "contact_number": {
                    "type": "string",
                    "example": "8769876567"
                },
                "website": {
                    "type": "string",
                    "example": "http://wavelabs.in"
                },
                "start_date": {
                   "type": "string",
                   "example": "10-10-2016"
                },
                "end_date": {
                   "type": "string",
                   "example": "10-10-2016"
                },
                "start_time": {
                   "type": "string",
                   "example": "10:30"
                },
                "end_time": {
                   "type": "string",
                   "example": "17:30"
                }
            }
        },
        "ShowEvent": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64",
                    "example": 1
                },
                "name": {
                    "type": "string",
                    "example": "Sample Event"
                },
                "description": {
                    "type": "string",
                    "example": "Sample Event"
                },
                "address": {
                    "type": "string",
                    "example": "Hyderabad"
                },
                "location": {
                    "type": "string",
                    "example": "Hitech City"
                },
                "contact_person": {
                    "type": "string",
                    "example": "Jhon"
                },
                "contact_number": {
                    "type": "string",
                    "example": "8769876567"
                },
                "website": {
                    "type": "string",
                    "example": "http://wavelabs.in"
                },
                "image_url": {
                    "type": "object",
                    "example": {
                                "id": 1,
                                "extension": "image/jpeg",
                                "mediaFileDetailsList": [
                                  {
                                    "mediapath": "http://localhost:3000/images/media/events/1/medium/event2.jpg?1475065430",
                                    "mediatype": "medium"
                                  },
                                  {
                                    "mediapath": "http://localhost:3000/images/media/events/1/small/event2.jpg?1475065430",
                                    "mediatype": "small"
                                  },
                                  {
                                    "mediapath": "http://localhost:3000/images/media/events/1/original/event2.jpg?1475065430",
                                    "mediatype": "original"
                                  }
                                ],
                                "supportedsizes": "small:48x48,medium:300x200"
                     }           
                },
                "schedule_time": {
                     "type": "string",
                     "example": "09:30AM-05:30AM"
                },
                "schedule_date": {
                     "type": "string",
                     "example": "Oct 10-Oct 10"
                },
                "attendencies": {
                     "type": "integer",
                     "example": 0
                }
            }
        },
        "Media": {
          "type": "object",
          "required": [
                "id",
                "extension",
                "mediaFileDetailsList",
                "supportedsizes"
            ],
          "properties": {
            "id": {
                "type": "integer",
                "default": 1
            },
            "extension": {
                "type": "string",
                "default": "image/jpeg"
            },
            "mediaFileDetailsList": {
                "type": "array",
                "default": [
                            {
                              "mediapath": "http://localhost:3000/images/media/events/1/medium/event2.jpg?1475065430",
                              "mediatype": "medium"
                            },
                            {
                              "mediapath": "http://localhost:3000/images/media/events/1/small/event2.jpg?1475065430",
                              "mediatype": "small"
                            },
                            {
                              "mediapath": "http://localhost:3000/images/media/events/1/original/event2.jpg?1475065430",
                              "mediatype": "original"
                            }
                          ]
            },
            "supportedsizes": {
                "type": "string",
                "default": "small:48x48,medium:300x200"
            }
          }

        },
        "BadRequest": {
          "type": "object",
          "required": [
                "messageCode",
                "message"
            ],
          "properties": {
            "messageCode": {
                "type": "string",
                "default": "bad.request"
            },
            "message": {
                "type": "string",
                "default": "Bad Request"
            }
          }

        },
        "UnauthorizedRequest": {
          "type": "object",
